#!/bin/bash

# bismark-mserver upstream bitrate, packet loss, jitter (D-ITG) measurements

# Load configuration
source /etc/bismark-mserver.conf

if [ $ITG_UP_PORT -ge 1024 ]; then
    ( ITGRecv -Sp $ITG_UP_PORT >> /tmp/itg.log 2>&1 & )
else
    echo "Sorry, $0 can't bind to ports < 1024. Terminating."
    exit 1
fi

